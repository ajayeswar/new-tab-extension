{
  "manifest_version": 2,

  "name": "AJAY'S EXTENSION",
  "description": "New tab - Chrome extension",
  "version": "0.0.1",
  "browser_action": {
    "default_title": "Magic about to happen"
  },
  "icons": {
    "16": "people-1.png",
    "48": "people-1.png",
    "128": "people-1.png"
  },
  "incognito": "split",
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts" : [
    {
        "matches" : [ "http://*/*" ],
        "css": ["/static/css/main.css"],
        "js": ["contentScript.js","/static/js/main.js"]
    }
  ],
  "content_security_policy": "script-src 'self' 'sha256-sI/kSbePww5Nvz4kZ7CKiGTFFJrmPe61CdT3ouc14Hw='; object-src 'self'",
  "permissions": ["tabs", "topSites", "bookmarks"]
}